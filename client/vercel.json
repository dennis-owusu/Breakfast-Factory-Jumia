{
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://breakfast-factory-jumia.onrender.com/api/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "routes": [
    { "src": "/[^.]+", "dest": "/", "status": 200 }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=1, stale-while-revalidate" }
      ]
    }
  ]
}